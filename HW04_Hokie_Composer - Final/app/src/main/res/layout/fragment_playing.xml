<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/audio_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/textview_border"
        android:gravity="center_horizontal"
        android:text="@string/go_tech_go"
        android:textSize="35sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/soundtrack_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/gotechgoimage"
        app:layout_constraintTop_toBottomOf="@id/audio_file_name"
        android:contentDescription="@string/soundtrack_image_description" />

    <Button
        android:id="@+id/play_pause_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/soundtrack_pic" />

    <Button
        android:id="@+id/restart_music_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/restart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_pause_button" />
</androidx.constraintlayout.widget.ConstraintLayout>